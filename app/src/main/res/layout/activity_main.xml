<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewDashboard" android:visibility="visible" android:background="#F8F8F8"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="175dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/headerGradient" android:background="@drawable/gradient_header">
        </LinearLayout>
        <TextView
                android:text="My Page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:textStyle="bold"
                android:textSize="30sp" android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@+id/headerGradient" android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="@+id/headerGradient"
                android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/headerMenu"
                android:layout_marginStart="25dp"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" app:srcCompat="@drawable/ic_bug_report_black_24dp"
                android:id="@+id/bug" android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="@+id/headerGradient"
                app:layout_constraintEnd_toEndOf="@+id/headerGradient" android:layout_marginEnd="25dp"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" app:srcCompat="@drawable/ic_bubble_chart_black_24dp"
                android:id="@+id/bubble"
                app:layout_constraintStart_toStartOf="@+id/headerGradient" android:layout_marginStart="25dp"
                app:layout_constraintTop_toTopOf="@+id/headerGradient" android:layout_marginTop="25dp"
                android:contentDescription="bubbleLogo"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:id="@+id/headerMenu" android:layout_marginTop="125dp"
                app:layout_constraintTop_toTopOf="@+id/headerGradient"
                app:layout_constraintStart_toEndOf="@+id/headerGradient" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:background="@drawable/shape">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                <TextView
                        android:text="61"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/focusedCount" android:textAlignment="center"
                        android:gravity="center" android:textSize="24sp" android:textColor="@android:color/black"/>
                <TextView
                        android:text="Focused"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/focused" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                <TextView
                        android:text="17"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/viewedCount" android:textAlignment="center"
                        android:gravity="center" android:textSize="24sp" android:textColor="@android:color/black"/>
                <TextView
                        android:text="Collected"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/collected" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                <TextView
                        android:text="125"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/viewCount" android:textSize="24sp"
                        android:textAlignment="center" android:gravity="center" android:textColor="#000000"/>
                <TextView
                        android:text="Viewed"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/viewed" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/cathyAvatar" android:textSize="24sp"
                        android:textAlignment="center" android:gravity="center" android:textColor="#000000"/>
                <TextView
                        android:text="Cathy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/textView9"
                        android:textAlignment="center" android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@drawable/cat" android:id="@+id/cat"
                android:layout_marginBottom="55dp"
                app:layout_constraintBottom_toBottomOf="@+id/headerMenu"
                app:layout_constraintEnd_toEndOf="@+id/headerMenu" android:layout_marginEnd="16dp"/>
        <TextView
                android:text="Order Related"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/orderRelated"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/headerMenu" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:id="@+id/headerMenuBody"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:background="@drawable/shape"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/orderRelated" app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/unpaidLogo"
                        android:scaleX="0.7" android:scaleY="0.7"
                        app:srcCompat="@drawable/ic_local_library_black_24dp" android:contentDescription="TODO"/>
                <TextView
                        android:text="Unpaid"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/unpaid" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/receivingLogo"
                        android:scaleX="0.7" android:scaleY="0.7" app:srcCompat="@drawable/ic_local_offer_black_24dp"
                        android:contentDescription="TODO"/>
                <TextView
                        android:text="Receiving"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/receiving" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/evaluateLogo"
                        android:scaleX="0.7" android:scaleY="0.7"
                        app:srcCompat="@drawable/ic_local_florist_black_24dp" android:contentDescription="TODO"/>
                <TextView
                        android:text="Evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/evaluate" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/returnedLogo"
                        android:scaleX="0.7" android:scaleY="0.7"
                        app:srcCompat="@drawable/ic_content_paste_black_24dp" android:contentDescription="TODO"/>
                <TextView
                        android:text="Returned"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/returned" android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/title_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="4dp"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu">
    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>